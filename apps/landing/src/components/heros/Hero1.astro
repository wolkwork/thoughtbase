---
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Link from "@/components/fundations/elements/Link.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";

const SIGNUP_URL = import.meta.env.PUBLIC_APP_URL + "/signup";
---

<section>
  <Wrapper variant="standard" class="pt-32 pb-4">
    <div class="text-center text-balance">
      <Text
        tag="h1"
        variant="displayMD"
        class="font-serif font-medium tracking-tight text-black"
      >
        Turn Feedback into Features
      </Text>
      <Text
        tag="p"
        variant="textBase"
        class="max-w-xl mx-auto mt-4 text-base-500"
      >
        Open-source feedback platform: collect ideas, prioritize your roadmap,
        and publish changelogs. Self-host for free or use Cloud with a 14-day
        trialâ€”no credit card required.
      </Text>
    </div>
    <div
      class="flex flex-wrap items-center justify-center w-full mt-10 just gap-2 pb-16"
    >
      <Link size="sm" variant="accent" href={SIGNUP_URL} class="relative group">
        Start 14-day Cloud trial
      </Link>
      <Link
        size="sm"
        variant="default"
        href="#pricing-section"
        class="relative group"
      >
        Self-host for free
      </Link>
      <!-- <Image
      src={Dashboard}
      alt="Dashboard"
      class="w-full h-auto mt-8 rounded-xl"
    /> -->
    </div>
  </Wrapper>
</section>
