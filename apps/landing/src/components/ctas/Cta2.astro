---
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import Link from "@/components/fundations/elements/Link.astro";

const SIGNUP_URL = import.meta.env.PUBLIC_APP_URL + "/signup";
---

<section class="border-t border-base-200 border-dashed">
  <Wrapper variant="standard" class="py-4 bg-sand-100">
    <div class="grid grid-cols-1 gap-4 lg:grid-cols-3 lg:items-end lg:pt-48">
      <div class="lg:col-span-2">
        <Text
          tag="h2"
          variant="displaySM"
          class="font-serif font-medium text-base-900 lg:text-balance"
        >
          Up and running before your coffee gets cold
        </Text>
        <Text
          tag="p"
          variant="textBase"
          class="mt-2 text-base-500 lg:text-balance"
        >
          It works with React, Vue, Svelte, and whatever framework you're
          rewriting your app in this week.
        </Text>
      </div>
      <div class="flex lg:ml-auto">
        <Link gap="sm" size="sm" variant="default" href={SIGNUP_URL}>
          Get started
        </Link>
      </div>
    </div>
  </Wrapper>
</section>
