---
// Foundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Link from "@/components/fundations/elements/Link.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import Check from "@/components/fundations/icons/Check.astro";
import { AstroSeo } from "@astrolib/seo";

const SIGNUP_URL = import.meta.env.PUBLIC_APP_URL + "/signup";

const comparisonFeatures = [
  {
    category: "Pricing & Value",
    features: [
      {
        name: "Starting Price",
        thoughtbase: "$25/month",
        uservoice: "Starts at $1300/month",
        thoughtbaseWins: true,
      },
      {
        name: "Unlimited Tracked Users",
        thoughtbase: "✓ Included",
        uservoice: "✗ Limited by plan",
        thoughtbaseWins: true,
      },
      {
        name: "Unlimited Ideas",
        thoughtbase: "✓ Included",
        uservoice: "✓ Included",
        thoughtbaseWins: false,
      },
      {
        name: "Unlimited Admins",
        thoughtbase: "✓ Included",
        uservoice: "✗ Limited by plan",
        thoughtbaseWins: true,
      },
      {
        name: "Transparent Pricing",
        thoughtbase: "✓ Public pricing",
        uservoice: "✗ Custom/Enterprise only",
        thoughtbaseWins: true,
      },
    ],
  },
  {
    category: "Core Features",
    features: [
      {
        name: "Feedback Collection Widget",
        thoughtbase: "✓ Lightweight & Fast",
        uservoice: "✓ Available",
        thoughtbaseWins: false,
      },
      {
        name: "Roadmap",
        thoughtbase: "✓ Beautiful & Visual",
        uservoice: "✓ Available",
        thoughtbaseWins: false,
      },
      {
        name: "Custom Domain",
        thoughtbase: "✓ Pro Plan ($49/mo)",
        uservoice: "✓ Available",
        thoughtbaseWins: true,
      },
      {
        name: "White Label",
        thoughtbase: "✓ Pro Plan ($49/mo)",
        uservoice: "✓ Available",
        thoughtbaseWins: true,
      },
      {
        name: "SSO / Automatic Login",
        thoughtbase: "✓ Business Plan ($99/mo)",
        uservoice: "✓ Available",
        thoughtbaseWins: true,
      },
      {
        name: "Changelog",
        thoughtbase: "✓ Included",
        uservoice: "✓ Available",
        thoughtbaseWins: false,
      },
    ],
  },
  {
    category: "User Experience",
    features: [
      {
        name: "Speed & Performance",
        thoughtbase: "✓ Fast dashboard, lightweight widget",
        uservoice: "Standard",
        thoughtbaseWins: true,
      },
      {
        name: "Ease of Setup",
        thoughtbase: "✓ Simple, straightforward",
        uservoice: "Complex enterprise setup",
        thoughtbaseWins: true,
      },
      {
        name: "Built by Engineers",
        thoughtbase: "✓ We use it ourselves",
        uservoice: "Enterprise-focused",
        thoughtbaseWins: true,
      },
      {
        name: "Bootstrapped & Independent",
        thoughtbase: "✓ No VC pressure",
        uservoice: "VC-backed",
        thoughtbaseWins: true,
      },
    ],
  },
];
---

<BaseLayout>
  <AstroSeo
    slot="seo"
    title="UserVoice Alternative - Thoughtbase | Better Feedback Management"
    description="Looking for a UserVoice alternative? Thoughtbase offers transparent pricing, unlimited users, and a simpler approach to feedback management. Compare features and switch today."
    canonical="https://thoughtbase.app/uservoice-alternative"
    openGraph={{
      url: "https://thoughtbase.app/uservoice-alternative",
      title: "UserVoice Alternative - Thoughtbase | Better Feedback Management",
      description:
        "Looking for a UserVoice alternative? Thoughtbase offers transparent pricing, unlimited users, and a simpler approach to feedback management. Compare features and switch today.",
      images: [
        {
          url: "https://thoughtbase.app/og-image.jpg",
          width: 1200,
          height: 630,
          alt: "Thoughtbase - UserVoice Alternative",
          type: "image/jpeg",
        },
      ],
      site_name: "Thoughtbase",
      type: "website",
      locale: "en_US",
    }}
  />

  <section>
    <Wrapper variant="standard" class="pt-32 pb-12">
      <div class="max-w-4xl mx-auto text-balance">
        <Text
          tag="h1"
          variant="displayMD"
          class="font-serif font-medium tracking-tight text-black"
        >
          Thoughtbase: a UserVoice alternative with transparent pricing and
          unlimited users
        </Text>
        <Text tag="p" variant="textBase" class="mt-4 text-base-500">
          Looking for a UserVoice alternative? Thoughtbase offers transparent
          pricing starting at $25/month, unlimited tracked users, and a simpler
          approach to turning feedback into features—without the enterprise
          complexity.
        </Text>
      </div>
    </Wrapper>

    <Wrapper variant="standard" class="pt-12 pb-4 border-t">
      <div class="max-w-4xl mx-auto">
        <Text
          tag="h2"
          variant="displaySM"
          class="font-serif font-medium tracking-tight text-black"
        >
          Why Choose Thoughtbase Over UserVoice?
        </Text>
        <Text tag="p" variant="textBase" class="mt-4 text-base-500">
          UserVoice is powerful but complex and expensive. We built Thoughtbase
          to be the feedback tool that actually makes sense for growing teams.
          Here's what makes us different:
        </Text>

        <div class="mt-8 grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="flex flex-col p-4 bg-sand-100 rounded-xl">
            <Text tag="h3" variant="textSM" class="font-medium text-base-900">
              Transparent Pricing
            </Text>
            <Text tag="p" variant="textSM" class="mt-2 text-base-500">
              Starting at $25/month with public pricing. No custom quotes, no
              enterprise sales calls. Just straightforward pricing that makes
              sense.
            </Text>
          </div>

          <div class="flex flex-col p-4 bg-sand-100 rounded-xl">
            <Text tag="h3" variant="textSM" class="font-medium text-base-900">
              Unlimited Everything
            </Text>
            <Text tag="p" variant="textSM" class="mt-2 text-base-500">
              Unlimited tracked users, unlimited ideas, unlimited admins. No
              arbitrary limits that force you to upgrade.
            </Text>
          </div>

          <div class="flex flex-col p-4 bg-sand-100 rounded-xl">
            <Text tag="h3" variant="textSM" class="font-medium text-base-900">
              Simple & Fast
            </Text>
            <Text tag="p" variant="textSM" class="mt-2 text-base-500">
              Fast dashboard, lightweight widget, no enterprise bloat. We
              prioritize what matters: collecting feedback and shipping
              features.
            </Text>
          </div>
        </div>
      </div>
    </Wrapper>

    <Wrapper variant="standard" class="pt-12 pb-4 border-t">
      <div class="max-w-4xl mx-auto">
        <Text
          tag="h2"
          variant="displaySM"
          class="font-serif font-medium tracking-tight text-black"
        >
          Feature Comparison
        </Text>
        <Text tag="p" variant="textBase" class="mt-4 text-base-500">
          See how Thoughtbase compares to UserVoice across key features:
        </Text>

        <div class="mt-8 space-y-12">
          {
            comparisonFeatures.map((category) => (
              <div>
                <Text
                  tag="h3"
                  variant="textBase"
                  class="font-medium text-base-900 mb-4"
                >
                  {category.category}
                </Text>
                <div class="overflow-x-auto">
                  <table class="w-full border-collapse">
                    <thead>
                      <tr class="border-b border-base-200">
                        <th class="text-left py-3 px-4 font-medium text-base-900">
                          Feature
                        </th>
                        <th class="text-left py-3 px-4 font-medium text-base-900">
                          Thoughtbase
                        </th>
                        <th class="text-left py-3 px-4 font-medium text-base-900">
                          UserVoice
                        </th>
                      </tr>
                    </thead>
                    <tbody>
                      {category.features.map((feature) => (
                        <tr
                          class={`border-b border-base-200 ${
                            feature.thoughtbaseWins ? "bg-sand-50" : ""
                          }`}
                        >
                          <td class="py-3 px-4 font-medium text-base-900">
                            {feature.name}
                          </td>
                          <td class="py-3 px-4 text-base-500">
                            {feature.thoughtbase}
                          </td>
                          <td class="py-3 px-4 text-base-500">
                            {feature.uservoice}
                          </td>
                        </tr>
                      ))}
                    </tbody>
                  </table>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </Wrapper>

    <Wrapper variant="standard" class="pt-12 pb-4 border-t">
      <div class="max-w-4xl mx-auto">
        <Text
          tag="h2"
          variant="displaySM"
          class="font-serif font-medium tracking-tight text-black"
        >
          Pricing Comparison
        </Text>
        <Text tag="p" variant="textBase" class="mt-4 text-base-500">
          Transparent pricing with no hidden costs. 14-day free trial on all
          plans. No enterprise sales calls required.
        </Text>

        <div class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-4">
          <div class="flex flex-col p-6 bg-sand-50 rounded-xl">
            <Text tag="h3" variant="textBase" class="font-medium text-base-900">
              Thoughtbase Pro
            </Text>
            <Text
              variant="displaySM"
              class="font-medium flex items-baseline tracking-tighter mt-2 font-serif text-base-900"
            >
              $49
              <span class="text-sm font-normal tracking-normal text-base-500">
                / mo
              </span>
            </Text>
            <ul class="flex flex-col mt-4 text-sm gap-y-2 text-base-900">
              <li class="flex items-start gap-2">
                <Check size="sm" class="shrink-0 text-base-500" />
                <span>Custom Domain</span>
              </li>
              <li class="flex items-start gap-2">
                <Check size="sm" class="shrink-0 text-base-500" />
                <span>White Label</span>
              </li>
              <li class="flex items-start gap-2">
                <Check size="sm" class="shrink-0 text-base-500" />
                <span>Unlimited Users</span>
              </li>
              <li class="flex items-start gap-2">
                <Check size="sm" class="shrink-0 text-base-500" />
                <span>Public Pricing</span>
              </li>
            </ul>
          </div>

          <div class="flex flex-col p-6 bg-sand-50 rounded-xl">
            <Text tag="h3" variant="textBase" class="font-medium text-base-900">
              UserVoice
            </Text>
            <Text
              variant="displaySM"
              class="font-medium flex items-baseline tracking-tighter mt-2 font-serif text-base-900"
            >
              Custom
              <span class="text-sm font-normal tracking-normal text-base-500">
                / mo
              </span>
            </Text>
            <ul class="flex flex-col mt-4 text-sm gap-y-2 text-base-900">
              <li class="flex items-start gap-2">
                <Check size="sm" class="shrink-0 text-base-500" />
                <span>Custom Domain</span>
              </li>
              <li class="flex items-start gap-2">
                <Check size="sm" class="shrink-0 text-base-500" />
                <span>Limited Users</span>
              </li>
              <li class="flex items-start gap-2">
                <Check size="sm" class="shrink-0 text-base-500" />
                <span>Enterprise Features</span>
              </li>
              <li class="flex items-start gap-2">
                <Check size="sm" class="shrink-0 text-base-500" />
                <span>Sales Call Required</span>
              </li>
            </ul>
          </div>
        </div>

        <div class="mt-6 p-4 bg-accent-50 rounded-xl">
          <Text tag="p" variant="textSM" class="text-base-900">
            <strong>Save thousands per year:</strong> Get custom domain and white
            label features at Thoughtbase Pro ($49/mo) vs UserVoice Enterprise for
            a fraction of the cost.
          </Text>
        </div>
      </div>
    </Wrapper>

    <Wrapper variant="standard" class="pt-12 pb-4 border-t">
      <div class="max-w-4xl mx-auto">
        <Text
          tag="h2"
          variant="displaySM"
          class="font-serif font-medium tracking-tight text-black"
        >
          Built for Teams Who Want to Move Fast
        </Text>
        <Text tag="p" variant="textBase" class="mt-4 text-base-500">
          UserVoice is built for large enterprises with complex needs.
          Thoughtbase is built for product teams who want to collect feedback,
          prioritize features, and ship—without the enterprise overhead.
        </Text>

        <div class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-4">
          <div class="flex flex-col p-4 bg-sand-100 rounded-xl">
            <Text tag="h3" variant="textSM" class="font-medium text-base-900">
              No Enterprise Sales Process
            </Text>
            <Text tag="p" variant="textSM" class="mt-2 text-base-500">
              Sign up, start collecting feedback. No sales calls, no custom
              contracts, no waiting for quotes.
            </Text>
          </div>

          <div class="flex flex-col p-4 bg-sand-100 rounded-xl">
            <Text tag="h3" variant="textSM" class="font-medium text-base-900">
              Bootstrapped & Independent
            </Text>
            <Text tag="p" variant="textSM" class="mt-2 text-base-500">
              We don't have VCs breathing down our necks demanding 10x growth.
              We answer to you.
            </Text>
          </div>

          <div class="flex flex-col p-4 bg-sand-100 rounded-xl">
            <Text tag="h3" variant="textSM" class="font-medium text-base-900">
              Built by Engineers
            </Text>
            <Text tag="p" variant="textSM" class="mt-2 text-base-500">
              We use Thoughtbase to build Thoughtbase. If it sucks, we fix it.
            </Text>
          </div>

          <div class="flex flex-col p-4 bg-sand-100 rounded-xl">
            <Text tag="h3" variant="textSM" class="font-medium text-base-900">
              Focus on What Matters
            </Text>
            <Text tag="p" variant="textSM" class="mt-2 text-base-500">
              Feedback collection, roadmap, changelog. No bloat, no unnecessary
              features you'll never use.
            </Text>
          </div>
        </div>
      </div>
    </Wrapper>

    <Wrapper variant="standard" class="pt-12 pb-4 border-t">
      <div class="max-w-4xl mx-auto">
        <Text
          tag="h2"
          variant="displaySM"
          class="font-serif font-medium tracking-tight text-black"
        >
          When to Choose Thoughtbase Over UserVoice
        </Text>
        <Text tag="p" variant="textBase" class="mt-4 text-base-500">
          UserVoice is great for large enterprises with complex customer
          intelligence needs. Thoughtbase is perfect if you:
        </Text>

        <ul class="mt-6 space-y-3">
          <li class="flex items-start gap-3">
            <Check size="sm" class="shrink-0 text-base-500 mt-0.5" />
            <Text tag="p" variant="textBase" class="text-base-500">
              Want transparent pricing without custom quotes or sales calls
            </Text>
          </li>
          <li class="flex items-start gap-3">
            <Check size="sm" class="shrink-0 text-base-500 mt-0.5" />
            <Text tag="p" variant="textBase" class="text-base-500">
              Need unlimited tracked users without paying per-user fees
            </Text>
          </li>
          <li class="flex items-start gap-3">
            <Check size="sm" class="shrink-0 text-base-500 mt-0.5" />
            <Text tag="p" variant="textBase" class="text-base-500">
              Prefer a simple, fast tool over complex enterprise software
            </Text>
          </li>
          <li class="flex items-start gap-3">
            <Check size="sm" class="shrink-0 text-base-500 mt-0.5" />
            <Text tag="p" variant="textBase" class="text-base-500">
              Want to get started quickly without lengthy onboarding
            </Text>
          </li>
          <li class="flex items-start gap-3">
            <Check size="sm" class="shrink-0 text-base-500 mt-0.5" />
            <Text tag="p" variant="textBase" class="text-base-500">
              Value a bootstrapped company that answers to customers, not VCs
            </Text>
          </li>
        </ul>
      </div>
    </Wrapper>

    <Wrapper variant="standard" class="pt-12 pb-32 border-t">
      <div class="max-w-2xl mx-auto text-center">
        <Text
          tag="h2"
          variant="displaySM"
          class="font-serif font-medium tracking-tight text-black"
        >
          Ready to Make the Switch?
        </Text>
        <Text tag="p" variant="textBase" class="mt-4 text-base-500">
          Start your 14-day free trial. Cancel anytime. No sales calls, no
          custom contracts.
        </Text>
        <div class="mt-8 flex justify-center">
          <Link
            size="sm"
            variant="accent"
            href={SIGNUP_URL}
            class="opacity-70 relative group w-fit"
          >
            Get started for free
          </Link>
        </div>
      </div>
    </Wrapper>
  </section>
</BaseLayout>
